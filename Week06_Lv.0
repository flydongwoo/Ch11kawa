#include <stdio.h>

// 특수문자 출력하기

int main(void) {
    // \\는 백슬래시 하나를 출력하기 위해서 하는 것 (이스케이프 문자)
    // \는 작은따옴표 '를 출력하기 위해서 하는 것
    // 맨 마지막 \n은 줄바꿈 문자
    printf("!@#$%^&*(\\'\"<>?:;\n");
    return 0;
}
