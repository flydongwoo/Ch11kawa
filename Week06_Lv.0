#include <stdio.h>
#define LEN_INPUT 11

// 문자열 반복해서 출력하기

int main(void) {
    // s1이라는 배열 생성
    char s1[LEN_INPUT];
    // a를 정수형으로 정의
    int a;
    // s1을 입력받고 정수 a를 입력받음
    scanf("%s %d", s1, &a);
    // 반복문을 i가 a보다 작을때까지 입력 받음
    for (int i = 0; i < a; i++) {
        // 반복문을 돌며 s1을 출력함
        printf("%s", s1);
    }
    return 0;
}

