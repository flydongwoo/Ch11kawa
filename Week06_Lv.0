#include <stdio.h>
#define LEN_INPUT 20

// 대소문자 반복해서 출력하기

int main(void) {
    char s1[LEN_INPUT];
    scanf("%s", s1);

    // 반복문을 사용하여 LEN_INPUT 만큼 i를 키워가며 반복함
    for (int i = 0; i < LEN_INPUT - 1; i++) {
        // (중요!!) 배열의 길이를 10으로 임의 설정해두었으나 
        // 실제로는 그보다 더 작을 수 있기 때문에 
        // \0이 나온다면, 바로 종료되고 
        // for문을 빠져나갈 수 있도록 해야함!
        if (s1[i] == '\0') {
            break;
        }
        // 검사결과, 소문자면 대문자로 바꿔주기!
        if (islower(s1[i])) {
            s1[i] = toupper(s1[i]);
        }
        // 검사결과, 대문자면 소문자로 바꿔주기!
        else {
            s1[i] = tolower(s1[i]);
        }
    }

    // s1을 출력하기!
    printf("%s", s1);

    return 0;
}

