#include <stdio.h>
#define LEN_INPUT 1000001

// 문자열 출력하기

int main(void) {
    // 배열 크기 설정 
    char s1[LEN_INPUT];
    // s1이라는 문자열 입력을 받음
    scanf("%s", s1);
    // scanf("%[^\n]", s1); 라고 하면 공백을 포함해서 
    // 모든 문자를 출력할 수 있게 됨
 
    // s1이라는 문자열을 출력함
    printf("%s\n", s1);

    return 0;
}

