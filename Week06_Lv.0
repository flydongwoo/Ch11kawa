#include <stdio.h>

// a와 b 출력하기

int main(void) {
    // a와 b를 정의해줌
    int a;
    int b;

    // a와 b를 
    scanf("%d %d", &a, &b);

    // 출력문에서 줄을 구분하기 위해 \n을 넣어줌!
    printf("a = %d\n", a);
    printf("b = %d\n", b);

    return 0;
}
